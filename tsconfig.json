{
    "compilerOptions": {
        "noImplicitAny": true,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es7"
        ],
        "declaration": true,
        "sourceMap": true,
        "removeComments": false,
        "experimentalDecorators": true
    },
	"exclude": [
		"node_modules",
		"bower_components",
		"jspm_packages",
		"tmp",
		"temp",
		"bin",
		"docs",
		"pkg",
		"examples"
	]
}