{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"command": "npx",
	"type": "shell",
	"tasks": [
		{
			"label": "build:vscode",
			"args": ["gulp", "build"],
			"group": "build",
			"isBackground": false,
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "tests",
			"args": ["gulp", "tests"],
			"type": "shell",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "docs",
			"args": ["gulp", "docs"],
			"type": "shell"
		}
	]
}